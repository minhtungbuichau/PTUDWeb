    <div class="row" style="margin-left:40px; margin-right: 40px; margin-top: 50px">
        <table class="table">
            <thead class="">
                <tr>
                    <th scope="col">Mã sản phẩm</th>
                    <th scope="col">Tên sản phẩm</th>
                    <th scope="col">Loại sản phẩm</th>
                    <th scope="col">Nhà sản xuất</th>
                    <th scope="col">Số lượng</th>
                    <th scope="col">Giá bán</th>
                    <th scope="col">Lượt bán</th>
                    <th scope="col">Lượt xem</th>
                    <th scope="col">Ngày thêm</th>
                    <th scope="col">Quản lý</th>
                </tr>
            </thead>
            <tbody>
                {{#each Item}}
                <tr>
                    <td>{{ProID}}</td>
                    <td>{{ProName}}</td>
                    <script>
                        var cate = ({{CatID}});
                        var x = getCatFunction(cate);
                        document.getElementById("cat").innerHTML = x;
                        function getCatFunction(cate){
                            if(cate === 1)
                                return "Gaming";
                            if(cate === 2)
                                return "Văn phòng";
                            if(cate === 3)
                                return "Doanh nhân";
                            if(cate === 4)
                                return "Ultrabook";
                        }
                    </script>
                    <td id="cat"></td>
                    <script>
                        var produ = ({{ProduID}});
                        var x = getProduFunction(produ);
                        document.getElementById("producer").innerHTML = x;
                        function getProduFunction(produ){
                            if(produ === 1)
                                return "Asus";
                            if(produ === 2)
                                return "Dell";
                            if(produ === 3)
                                return "Macbook";
                            if(produ === 4)
                                return "MSI";
                        }
                    </script>
                    <td id="producer"></td>
                    <td>{{Quantity}}</td>
                    <td>{{Price}}</td>
                    <td>{{Sales}}</td>
                    <td>{{Views}}</td>
                    <td>{{AddDate}}</td>
                    <td>
                        <form action="/add" method="get">
                        <input type="submit" value="+">
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
