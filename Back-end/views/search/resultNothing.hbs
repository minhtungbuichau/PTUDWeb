{{#section 'bodyleft'}}
<!-- aside Widget -->
<div class="aside" style="padding-left:0px">
	<!--<h3 class="aside-title">Tìm kiếm nâng cao</h3> -->
	<div style="margin-top:30px">
		
	<div class="col-md-8">
			<div class="header-search">
				<form method="POST" action="/search/advancesearch">
				<h4>Hãng sản xuất</h4>
					<select class="input-select" name="optionProdu">
						<option value="all">Tất cả</option>
						<option value="Asus">Asus</option>
						<option value="Dell">Dell</option>
						<option value="Mac">Mac</option>
						<option value="MSI">MSI</option>
					</select>
					<h4>Loại laptop</h4>
					<select class="input-select" name="optionCat">
						<option value="all">Tất cả</option>
						<option value="Laptop Gaming">Laptop Gaming</option>
						<option value="Laptop Văn phòng">Laptop Văn phòng</option>
						<option value="Laptop Doanh nhân">Laptop Doanh nhân</option>
						<option value="Laptop Ultrabook">Laptop Ultrabook</option>
					</select>
					<h4>Mức giá</h4>
					<select class="input-select" name="optionPrice">
						<option value="100000000">Tất cả</option>
						<option value="20000000">10-20 triệu</option>
						<option value="30000000">20-30 triệu</option>
						<option value="40000000">30-40 triệu</option>
						<option value="50000000">40-50 triệu</option>
					</select>
					<button class="search-btn" type="submit" style="margin-top:50px">Tìm kiếm</button>
				</form>
			</div>
		</div>
		
	</div>
</div>
